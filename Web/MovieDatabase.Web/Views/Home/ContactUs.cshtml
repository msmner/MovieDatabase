@model MovieDatabase.Web.ViewModels.Users.UserContactFormInputViewModel

@{
    this.ViewData["Title"] = "Contact Us";
}

<h4 class="text-light text-center">@this.ViewData["Title"]</h4>
<form method="post" enctype="multipart/form-data">
    <h4>@this.ViewData["Title"]</h4>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Message">Message</label>
        <textarea asp-for="Message" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserEmail"></label>
        <input asp-for="UserEmail" class="form-control" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>