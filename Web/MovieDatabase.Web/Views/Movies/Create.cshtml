@model MovieDatabase.Web.ViewModels.Movies.CreateMovieInputViewModel

<form method="post">
    <div class="form-group">
        <label>Movie title</label>
        <input asp-for="Title" class="form-control form-control-lg" type="text" placeholder="">
    </div>
    <div class="form-group">
        <label>Description of the movie</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label>Image Url</label>
        <input asp-for="ImageUrl" class="form-control form-control-lg" type="text" placeholder="">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
