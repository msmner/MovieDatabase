@model MovieDatabase.Web.ViewModels.Movies.CreateMovieInputViewModel

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Movie title</label>
        <input asp-for="Title" class="form-control form-control-lg" type="text" placeholder="">
    </div>
    <div class="form-group">
        <label>Description of the movie</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="GenreIds"></label>
        <select multiple="multiple" class="form-control" asp-for="GenreIds" asp-items="Model.Genres"></select>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input type="file" asp-for="Image">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>>

