@model MovieDatabase.Web.ViewModels.DropDownViewModel
<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Genres
    </a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        @foreach (var genre in this.Model.Genres)
        {
        <a class="dropdown-item" asp-area="" asp-controller="Movies" asp-action="ByGenre" asp-route-genre="@genre.Type">@genre.Type</a>
        }
    </div>
</li>