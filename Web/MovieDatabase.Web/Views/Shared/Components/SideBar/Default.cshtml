@model MovieDatabase.Web.ViewModels.SideBarViewModel
<div class="posts margin-bottom-40 container-fluid bg-info">
    <div>
        <h5>Recent Comments</h5>
    </div>
    @foreach (var comment in Model.RecentComments)
    {
        <dl class="dl-horizontal mw-100 mt-5 bg-secondary">
            <dd>
                <p>
                    <a class="text-break text-light" asp-controller="Reviews" asp-action="Details" asp-route-id="@comment.MovieId">@comment.MovieTitle</a>
                    <div class="text-break text-light">@Html.Raw(comment.SanitizedContent)</div>
                </p>
            </dd>
        </dl>
    }
</div>