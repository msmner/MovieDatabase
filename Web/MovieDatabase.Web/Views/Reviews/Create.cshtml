@model MovieDatabase.Web.ViewModels.Reviews.CreateReviewInputViewModel

<form method="post">
    <h1>Review</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Content">Movie title</label>
        <textarea class="form-control" asp-for="Content" rows="3"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating">Your Rating</label>
        <select class="form-control" asp-for="@Model.Rating">
            @for (int i = 1; i < 10; i++)
            {
                <option>@i</option>
            }
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>