@model MovieDatabase.Web.ViewModels.Reviews.ReviewDetailsViewModel

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title" >@Model.MovieTitle</h5>
        <p class="card-text">@Model.Content"</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.FirstQuote</li>
        <li class="list-group-item">@Model.SecondQuote"</li>
        <li class="list-group-item">@Model.ThirdQuote"</li>
    </ul>
    <div class="card-body">
        <a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>
    </div>
</div>